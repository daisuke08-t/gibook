<div class="book-wrapper">
  <div class="container">
    <div class="row">
      <div class="book-container">
        
        <h2>Book</h2>
        <% @books.each do |book| %>
          
          <div>
            <h3><%= book.title %></h3>
            <%= link_to "削除", book_path(id: book.id), method: :delete %>
          </div>
          
          <div>
            <%= image_tag book.thumbnail %>
          </div>
          
          <div>
            <p><%= book.author %></p>
          </div>
          
          <div>
            <p><%= book.published %></p>
          </div>
          
          <div>
            <p><%= book.description %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>