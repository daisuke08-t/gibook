<div class="book-wrapper">
  <div class="container">
    <div class="row">
      <h2 class="text-center">My Books</h2>
      <div class="book-container">
        <% @books.each do |book| %>
        
          <div class="book-container-info">
            
            <div class="book-index-title">
              <h3><%= book.title %></h3>
              <%= link_to book_path(id: book.id), method: :delete do %>
                <i class="fas fa-trash-alt fa_trash"></i>
              <% end %>
            </div>
            
            <div class="book-index-thumbnail">
              <%= image_tag book.thumbnail %>
            </div>
            
            <div class="book-index-author">
              <p>著者：<%= book.author %></p>
            </div>
            
            <div class="book-index-published">
              <p>出版日：<%= book.published %></p>
            </div>
            
            <div class="book-index-description">
              <p>書籍概要：</p>
              <p><%= book.description %></p>
            </div>
            
          </div>
        
        <% end %>
      </div>
    </div>
  </div>
</div>