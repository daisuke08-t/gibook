<div class="book-wrapper">
  <div class="container">
    <div class="row">
      <h2 class="text-center">My Books</h2>
      <div class="book-container">
        <% @books.each do |book| %>
        
          <div class="book-container-info">
            
            <div class="book-index-title">
              <h3><%= book.title %></h3>
              <%= link_to book_path(id: book.id), method: :delete do %>
                <i class="fas fa-trash-alt fa_trash"></i>
              <% end %>
            </div>
            
            <div class="book-index-thumbnail">
              <%= image_tag book.thumbnail %>
            </div>
            
            <div class="book-index-author">
              <p>著者：<%= book.author %></p>
            </div>
            
            <div class="book-index-published">
              <p>出版日：<%= book.published %></p>
            </div>
            
            <div class="book-index-description">
              <p>書籍概要：</p>
              <p><%= book.description %></p>
            </div>
            
            <%= form_for @topic, url: new_topic_path, method: :get do |f| %>
            
              <%= f.hidden_field :title, value: book.title, class: 'js-title' %>
              
              <%= f.hidden_field :author, value: book.author, class: 'js-author' %>
              
              
              <%= f.hidden_field :published, value: book.published, class: 'js-published' %>
              
              
              <%= f.hidden_field :thumbnail, value: book.thumbnail, class: 'js-thumbnail' %>
              
              
              <%= f.hidden_field :description, value: book.description, class: 'js-description' %>
              
              
              <%= f.submit "書籍を紹介", class: 'btn-block btn-black btn' %>
            <% end %>
            
          </div>
        
        <% end %>
      </div>
    </div>
  </div>
</div>