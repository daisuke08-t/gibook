<div class="comment-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="comment-new-container">
        <h1 class="text-center">Comment up</h1>
        
        <%= form_for @comment do |f| %>
        
          <%= render 'shared/error_messages', model: f.object %>
        
          <%= f.hidden_field :topic_id, :value => @topic_id %>
  
          <div class="form-group">
            <%= f.label :content, class: 'text-black' %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          
          <%= f.submit "コメント投稿", class: 'btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
  
</div>