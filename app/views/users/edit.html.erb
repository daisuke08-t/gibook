<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="users-new-container">
        <h1 class="text-center">Update <%= @user.name %></h1>
        
        <%= form_for @user do |f| %>
          
          <%= render 'shared/error_messages', model: f.object %>
          
          <div class="form-group">
            <%= f.label :name, class: 'text-black' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :email, class: 'text-black' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :icon %>
            <%= f.file_field :icon %>
          </div>
          
          <div class="form-group">
            <%= f.label :content, class: 'text-black' %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :password, class: 'text-black' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'text-black' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          
          <%= f.submit "更新", class: 'btn-block btn-black' %>
        <% end %>
        
      </div>
    </div>
  </div>
  
</div>